page {
  padding-bottom: 90rpx;
}
.cart-wrapper .address-wrapper .address {
  display: flex;
  padding: 20rpx;
}
.cart-wrapper .address-wrapper .address .user-info {
  flex: 5;
}
.cart-wrapper .address-wrapper .address .user-phone {
  flex: 3;
  text-align: center;
}
.cart-wrapper .cart-content .cart-title {
  padding: 20rpx;
  font-size: 36rpx;
  color: var(--themeColor);
  border-top: 1rpx solid currentColor;
  border-bottom: 1rpx solid currentColor;
}
.cart-wrapper .cart-content .cart-main .cart-item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart-wrapper .cart-content .cart-main .cart-item .cart-checkbox {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-wrapper .cart-content .cart-main .cart-item .cart-img {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-wrapper .cart-content .cart-main .cart-item .cart-img image {
  width: 80%;
}
.cart-wrapper .cart-content .cart-main .cart-item .cart-info {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart-wrapper .cart-content .cart-main .cart-item .cart-info .goods-name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: #666;
}
.cart-wrapper .cart-content .cart-main .cart-item .cart-info .goods-price-wrap {
  display: flex;
  justify-content: space-between;
}
.cart-wrapper .cart-content .cart-main .cart-item .cart-info .goods-price-wrap .goods-price {
  color: var(--themeColor);
  font-size: 34rpx;
}
.cart-wrapper .cart-content .cart-main .cart-item .cart-info .goods-price-wrap .cart-num-tool {
  display: flex;
}
.cart-wrapper .cart-content .cart-main .cart-item .cart-info .goods-price-wrap .cart-num-tool .num-edit {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.cart-wrapper .cart-content .cart-main .cart-item .cart-info .goods-price-wrap .cart-num-tool .goods-num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-wrapper .footer-tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #000;
}
.cart-wrapper .footer-tool .all-check {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-wrapper .footer-tool .total-price-wrap {
  flex: 5;
  text-align: right;
  padding-right: 15rpx;
}
.cart-wrapper .footer-tool .total-price-wrap .total-price text.total-price-text {
  color: var(--themeColor);
  font-size: 34rpx;
  font-weight: 600;
}
.cart-wrapper .footer-tool .order-pay {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
