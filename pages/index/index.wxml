<view class="index-wrapper">
    <!-- 搜索框 开始 -->
    <SearchInput></SearchInput>
    <!-- 搜索框 结束 -->
    <!-- 轮播图 开始 -->
    <view class="swiper-wrapper">
        <!-- 
            1 swiper默认宽度高度为 100% * 150px
            2 image 默认高度 320px * 240px
            3 看原图宽高 750 * 340
            让图片高度自适应 宽度100%
            让swiper标签的高度变成和图片高一样
            4 图片标签
            mode属性 渲染模式
            widthFix 让图片的标签宽高 和 图片标签的内容的宽高都等比例的发生变化
        -->
        <swiper autoplay="{{true}}" indicator-dots circular>
            <swiper-item
            wx:for="{{swiperList}}"
            wx:key="goods_id"
            class=""
            item-id="">
                <image mode="widthFix" src="{{item.image_src}}"></image>
            </swiper-item>
        </swiper>
    </view>
    <!-- 轮播图 结束 -->
    <!-- 类目 开始 -->
    <view class="cate-wrapper">
        <navigator
        wx:for="{{catesList}}"
        wx:key="name"
        open-type="navigate">
            <image class="" src="{{item.image_src}}" mode="widthFix">
                
            </image>
        </navigator>
    </view>
    <!-- 类目 结束 -->
</view>